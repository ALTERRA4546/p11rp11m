<Window x:Class="TerminalDivision.ViewOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TerminalDivision"
        mc:Ignorable="d"
            Title="Просмотр заявок" Height="600" Width="1000" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <Rectangle HorizontalAlignment="Center" RadiusX="8" Width="970" Height="540" VerticalAlignment="Center" RadiusY="8" Fill="LightGray"/>
            <Rectangle HorizontalAlignment="Center" RadiusX="8" Width="970" Height="50" VerticalAlignment="Top" RadiusY="8" Fill="Orange"/>
            <Label Content="Информация о заявках" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Margin="0,8,0,0"/>
            <StackPanel Margin="10,60,10,10">
                <WrapPanel HorizontalAlignment="Left">
                    <WrapPanel>
                        <Label Content="Дата:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18"/>
                        <CheckBox x:Name="dateCrCheck" VerticalAlignment="Center" Click="type_SelectionChanged"/>
                        <DatePicker x:Name="dateCr" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" FontSize="18" Margin="0,2,0,0" KeyUp="dateCr_KeyUp"/>
                    </WrapPanel>
                </WrapPanel>
                <DataGrid x:Name="dataOut" Width="940" Height="390" Margin="0,10,0,0" d:ItemsSource="{d:SampleData ItemCount=5}" Background="LightGray">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Добавить в черый список" Click="MenuItem_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
                <Grid Margin="0,5,0,0">
                    <WrapPanel/>
                    <Button x:Name="select" Content="Просмотреть" HorizontalAlignment="Right" Margin="0,0,15,0" Width="120" Click="select_Click" FontSize="18"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
