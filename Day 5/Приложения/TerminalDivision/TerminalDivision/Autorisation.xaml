            <Label Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,-110,0,0"/>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
                <StackPanel>
                    <Grid>
                        <Label Content="Код" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="0,0,0,0"/>
                        <TextBox x:Name="login" HorizontalAlignment="Left" Margin="94,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" FontSize="18"/>
                    </Grid>
                    <Grid/>
                    <Button x:Name="EnterB" Content="Войти" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="378" FontSize="18" Click="EnterB_Click"/>
